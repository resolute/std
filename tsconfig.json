{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "ESNext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "lf",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": ".",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "stripInternal": true,
    "target": "esnext",
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "**/*.js",
    "**/*.cjs",
    "**/*.d.ts"
  ],
  "ts-node": {
    "preferTsExts": true
  }
}
